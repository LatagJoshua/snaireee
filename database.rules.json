{
  "rules": {
    "profiles": {
      "$username": {
        ".read": true,
        ".write": "auth != null && ((!data.exists() && newData.child('ownerUid').val() == auth.uid) || (data.exists() && data.child('ownerUid').val() == auth.uid))"
      }
    },
    "projects": {
      "$username": {
        "$projectId": {
          ".read": true,
          ".write": "auth != null"
        }
      }
    },
    "profilesByUid": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "leads": {
      "$leadId": {
        ".read": false,
        ".write": true
      }
    },
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    ".read": false,
    ".write": false
  }
}